{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],
    "jsx": "react",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "data/**/*.json"],
  "ts-node": {
    "typeCheck": false,
    "transpileOnly": true
  }
}
